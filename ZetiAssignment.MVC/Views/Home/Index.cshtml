@model ZetiAssignment.MVC.Models.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"></h1>
    <p>Pick Your Dates</p>
</div>

<div class="card">
    <div class="card-body">
        <form id="GetBillFileForm" method="post" action="@Url.Action("GetBillFile", "Home")">
            <div class="form-group">
                <label>From Date</label>
                @Html.TextBoxFor(a => a.FromDate, new { @class = "form-control", @type = "datetime" })
                @Html.ValidationMessageFor(a => a.FromDate)
            </div>

            <div class="form-group">
                <label>To Date</label>
                @Html.TextBoxFor(a => a.ToDate, new { @class = "form-control", @type = "datetime" })
                @Html.ValidationMessageFor(a => a.FromDate)
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary" >Fetch Bill</button>
            </div>
        </form>
    </div>
</div>

